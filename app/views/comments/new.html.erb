    <div class="grid_10">
        <div class="post2">

		<%= form_for([@article, @article.comments.new]) do |f| %>
			<div class="comment_form">
				<%= f.label :name %>
				<%= f.text_field :name %>
				
				<%= f.label :email %>
				<%= f.text_field :email %>

                <%= f.label :body %>
				<%= f.text_area :body, :cols => 40, :rows => 3 %>
		    </div>
	
			<div class="form-actions">
			<%= f.submit "Post comment",class: "btn btn-primary" %>
			</div>
		<% end %>