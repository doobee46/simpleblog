<table class="table table-condensed table-hover">
			 	
			    <thead>
				    <tr>
				    <th>Title</th>
				    <th>Published Date</th>
				    <th>Comments</th>
				    <th>Actions</th>
				    </tr>
			    </thead>
			    <tbody>
			        <% @articles.each do |article| %>		    	
				    <tr>
				    <td><%=link_to article.title, article%></td>
				    <td><%= article.datereg%></td>
				    <td><%= article.comments.count%></td>
				    <td>
				    <%= link_to image_tag("edit.png"), edit_article_path(article) %> |
	                <%= link_to image_tag("trash.png"), article, method: :delete, data:{confirm: "Are you sure you want to delete this posts."}  %>
	                </td>
				    </tr>
				    <%end%>
			    </tbody>
	    </table>
	    <div class="pages">
            <%= will_paginate @articles, class: " pagination pagination-mini" %>
        </div>