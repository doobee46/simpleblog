<div class="content">
   
                            <!--<div class="ads">
                                <img src="img/ad.png" alt="ad"/>
                            </div>-->
                            <div class="grid_5  alpha">
                                <div class="post">
                                   <%= render @articles %>
                                </div>
                                <div class="pages">
                                    <%= will_paginate @articles %>
                                </div>
                                
                            </div>
                             <div class="grid_3 push_1 omega ">
                                <div class="aside_right">
                                    <div class="rss_feed">
                                        <%=image_tag "rss.png" %> <%= link_to "Subscribe to Rss feed"%>
                                    </div>
                                    <div class="twitter_feed">
                                        <%= image_tag "twitter.png" %> <%= link_to "follow me on twitter"%>
                                    </div>
                                    <div class="recents">
                                        <h3 class="recent_title"> Recents blogs Posts</h3>
                                         <ul class="recent_list">
                                            <% @recent.each do |article| %>
                                                 <li>
                                                    <%= link_to article.title , article %>
                                                    
                                                 </li> 
                                            <%end%> 
                                        </ul>  
                                         
                                    </div>

                                    <div class="archive">
                                        <h3 class="recent_title"> Archives</h3>
                                        <% @posts_by_month.each do |monthname, posts| %>
                                            <p class="month-archive"><%= monthname %></p>
                                            <div class="archive">
                                                <ul class="archive">
                                                <% posts.each do |post| %>
                                                <li class="archive"><p class="archive-post"><%= post.title %></p></li>
                                                <% end %>
                                                </ul>
                                            </div>
                                        <%end%>
                                    </div>

                                </div>

                            </div>

                            
               
                           
                    

     
			           
						

