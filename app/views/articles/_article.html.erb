<div class="article">
    <div class="post_title">
      <h1>
        <%= article.title %>
        <% if article.created_at == Date.today  %>
          <span class="badge badge-info">new</span>
        <%end%>
      </h1>
    </div>

        <div class="post_details">
          <h3>
              Posted on ,<%= article.datereg %>, by <span class="author"> John Doe | <span class ="comments"><%= image_tag "convo.png" %> <%=  article.comments.count %> comments </span>  
          </h3>
        </div>

        <div class="loc_details">
          <h3>
          	<%= image_tag "location.png" %> <%= article.location %>
          </h3>
        </div>

       <p class ="post_body">
          <%= sanitize(truncate article.body, length: 320 )%>
       </p>

       <div class="tweet_btn">
          
       </div>

       <%= link_to "read more" ,article %>
</div>
                                    
                                
                                        
                                        