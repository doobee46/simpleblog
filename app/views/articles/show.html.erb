<div class="content">
                            <!--<div class="ads">
                                <img src="img/ad.png" alt="ad"/>
                            </div>-->
                            <div class="grid_10">
                                <div class="post2">
                                    <div class="show_article">
                                        <div class="post_title">
                                        <h1>
                                          <%= @article.title %>
                                        </h1>
                                      </div>

                                          <div class="post_details">
                                            <h3>
                                                Posted on ,<%= @article.datereg %>, by <span class="author"> John Doe | <span class ="comments"><%= image_tag "convo.png" %> <%=  @article.comments.count %> comments </span>  
                                            </h3>
                                          </div>

                                          <div class="loc_details">
                                            <h3>
                                              <%= image_tag "location.png" %> <%= @article.location %>
                                            </h3>
                                          </div>

                                         <p class ="post_body">
                                            <%= sanitize @article.body %>
                                         </p>

                                         <div class="social">
                                           <%= social_share_button_tag(@article.title) %>
                                         </div>

                                            
                                    </div>
                                        <div class="show_actions">
                                           
                                           <%= link_to "edit", edit_article_path(@article) %> |
                                         
                                           <%= link_to 'Back', articles_path %>
                                         

                                        </div>

                                    
                                      
                                      <h3 class="count"> 
                                        <span > <%= @article.comments.count%></span>
                                         Comments 
                                      </h3>

                                      <div class="comments">
                                        <%= render @article.comments %>
                                      </div>
                                       
                                      <%= render :file => 'comments/new' %>

                                </div>
                            </div>




